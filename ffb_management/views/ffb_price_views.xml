<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sawit_ffb_price_tree" model="ir.ui.view">
    <field name="name">sawit.ffb.price.tree</field>
    <field name="model">sawitpro.ffb.price</field>
    <field name="arch" type="xml">
      <list>
        <field name="mill_id"/>
        <field name="date"/>
        <field name="price_per_kg"/>
      </list>
    </field>
  </record>

  <record id="view_sawit_ffb_price_form" model="ir.ui.view">
    <field name="name">sawit.ffb.price.form</field>
    <field name="model">sawitpro.ffb.price</field>
    <field name="arch" type="xml">
      <form string="FFB Daily Price">
        <sheet>
          <group>
            <field name="mill_id"/>
            <field name="date"/>
            <field name="price_per_kg"/>
            <field name="currency_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_sawit_ffb_price_calendar" model="ir.ui.view">
    <field name="name">sawit.ffb.price.calendar</field>
    <field name="model">sawitpro.ffb.price</field>
    <field name="arch" type="xml">
        <calendar string="FFB Prices"
                  date_start="date"
                  date_stop="date">
            <field name="mill_id"/>
            <field name="price_per_kg"/>
        </calendar>
    </field>
  </record>

  <record id="action_sawit_ffb_price" model="ir.actions.act_window">
    <field name="name">FFB Prices</field>
    <field name="res_model">sawitpro.ffb.price</field>
    <field name="view_mode">list,form,calendar</field>
  </record>

  <menuitem id="menu_sawit_ffb_price" name="FFB Prices" parent="menu_sawit_operations" action="action_sawit_ffb_price" groups="base.group_user"/>
</odoo>

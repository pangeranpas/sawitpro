<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sawit_bulk_import_wizard" model="ir.ui.view">
    <field name="name">sawit.bulk.import.wizard</field>
    <field name="model">sawitpro.bulk.import</field>
    <field name="arch" type="xml">
      <form string="Bulk Import Delivery Orders">
        <sheet>
          <group>
            <field name="file" filename="filename" widget="binary"/>
            <field name="filename"/>
          </group>
          <footer>
            <button string="Import" type="object" name="action_import" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_create_sales_from_summary_wizard" model="ir.ui.view">
    <field name="name">sawit.create.sales.wizard</field>
    <field name="model">sawitpro.create.sales.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Sales from Summaries">
        <sheet>
          <group>
            <field name="summary_ids" widget="many2many_tags"/>
            <field name="partner_id"/>
          </group>
          <footer>
            <button string="Create Sales" type="object" name="action_create_sales" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sawit_daily_summary_tree" model="ir.ui.view">
    <field name="name">sawit.daily.summary.tree</field>
    <field name="model">sawitpro.daily.summary</field>
    <field name="arch" type="xml">
      <list>
        <field name="date"/>
        <field name="mill_id"/>
        <field name="fleet_id"/>
        <field name="total_net_kg"/>
      </list>
    </field>
  </record>

  <record id="view_sawit_daily_summary_form" model="ir.ui.view">
    <field name="name">sawit.daily.summary.form</field>
    <field name="model">sawitpro.daily.summary</field>
    <field name="arch" type="xml">
      <form string="Daily Delivery Summary">
        <sheet>
          <group>
            <field name="date"/>
            <field name="mill_id"/>
            <field name="fleet_id"/>
            <field name="total_net_kg" readonly="1"/>
          </group>
          <group>
            <field name="delivery_order_ids">
              <list>
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="quantity_kg"/>
                <field name="state"/>
              </list>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_sawit_daily_summary" model="ir.actions.act_window">
    <field name="name">Daily Delivery Summaries</field>
    <field name="res_model">sawitpro.daily.summary</field>
    <field name="view_mode">graph,list,form</field>
  </record>

  <menuitem id="menu_sawit_daily_summary" name="Daily Summaries" parent="menu_sawit_operations" action="action_sawit_daily_summary" groups="base.group_user"/>
</odoo>

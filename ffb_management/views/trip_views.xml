<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sawit_trip_tree" model="ir.ui.view">
    <field name="name">sawit.trip.tree</field>
    <field name="model">sawitpro.trip</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="planned_date"/>
        <field name="fleet_id"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <record id="view_sawit_trip_form" model="ir.ui.view">
    <field name="name">sawit.trip.form</field>
    <field name="model">sawitpro.trip</field>
    <field name="arch" type="xml">
      <form string="Trip">
        <sheet>
          <group>
            <field name="name"/>
            <field name="planned_date"/>
            <field name="fleet_id"/>
            <field name="state"/>
          </group>
          <group>
            <field name="delivery_order_ids">
              <list editable="bottom">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="quantity_kg"/>
                <field name="state"/>
              </list>
            </field>
          </group>
        </sheet>

        <footer>
          <button name="action_assign" string="Assign" type="object" class="btn-primary"/>
          <button name="action_start" string="Start Trip" type="object" class="btn-warning"/>
          <button name="action_complete" string="Complete Trip" type="object" class="btn-success"/>
          <button string="Cancel" special="cancel" class="btn-default"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_sawit_trip" model="ir.actions.act_window">
    <field name="name">Trips</field>
    <field name="res_model">sawitpro.trip</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_sawit_trips" name="Trips" parent="menu_sawit_operations" action="action_sawit_trip" groups="base.group_user"/>
</odoo>

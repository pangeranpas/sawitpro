<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Extend sale.order form: add button to show linked daily summaries (if any) -->
  <record id="view_sale_order_form_inherit_ffb" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.ffb</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="/form/header" position="inside">
        <button name="action_view_daily_summaries" string="Daily Summaries" type="object" class="oe_highlight"/>
      </xpath>

      <xpath expr="/form/sheet/notebook" position="inside">
        <page string="Delivery Orders Included">
          <!-- Placeholder: depending on implementation, this could be a one2many to a through model -->
          <field name="order_line"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>

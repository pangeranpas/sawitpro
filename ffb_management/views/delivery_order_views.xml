<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Kanban View -->
  <record id="view_sawit_delivery_order_kanban" model="ir.ui.view">
    <field name="name">sawit.delivery.order.kanban</field>
    <field name="model">sawitpro.delivery.order</field>
    <field name="arch" type="xml">
      <kanban>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_card">
              <div class="oe_kanban_details">
                <strong><field name="name"/></strong>
                <div><field name="vendor_id"/></div>
                <div><field name="quantity_kg"/> kg</div>
                <div>Status: <field name="state"/></div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- List / Tree View -->
  <record id="view_sawit_delivery_order_tree" model="ir.ui.view">
    <field name="name">sawit.delivery.order.tree</field>
    <field name="model">sawitpro.delivery.order</field>
    <field name="arch" type="xml">
      <list string="Delivery Orders">
        <field name="name"/>
        <field name="vendor_id"/>
        <field name="scheduled_date"/>
        <field name="quantity_kg"/>
        <field name="fleet_id"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <record id="view_sawit_delivery_order_form" model="ir.ui.view">
      <field name="name">sawit.delivery.order.form</field>
      <field name="model">sawitpro.delivery.order</field>
      <field name="arch" type="xml">
        <form string="Delivery Order">
          <!-- HEADER: tombol & statusbar -->
          <header>
            <!-- invisible expression style (Odoo 17/18) -->
            <button name="action_assign" string="Assign" type="object"
                    class="btn-primary" invisible="state != 'draft'"/>
            <button name="action_mark_picked" string="Mark Picked" type="object"
                    invisible="state != 'assigned'"/>
            <button name="action_mark_delivered" string="Mark Delivered" type="object"
                    invisible="state != 'picked_up'"/>
            <button name="action_confirm" string="Confirm" type="object"
                    class="btn-success" invisible="state != 'delivered'"/>
            <field name="state" widget="statusbar"
                   statusbar_visible="draft,assigned,picked_up,delivered,confirmed"/>
          </header>

          <!-- MAIN SHEET -->
          <sheet>
            <group>
              <group>
                <field name="name" readonly="1"/>
                <field name="vendor_id"/>
                <field name="vendor_type"/>
                <field name="scheduled_date"/>
                <field name="fleet_id"/>
                <field name="trip_id"/>
                <field name="state" readonly="1"/>
              </group>
              <group>
                <field name="quantity_kg"/>
                <field name="quality"/>
                <field name="moisture"/>
                <field name="impurity"/>
              </group>
            </group>

            <notebook>
              <page string="Weighbridge">
                <field name="weighbridge_ids">
                  <list editable="bottom">
                    <field name="name"/>
                    <field name="weigh_in"/>
                    <field name="weigh_out"/>
                    <field name="gross_weight_kg"/>
                    <field name="tare_weight_kg"/>
                    <field name="net_weight_kg"/>
                    <field name="vehicle_no"/>
                  </list>
                </field>
              </page>
              <!-- Anda bisa tambahkan page lain di sini -->
            </notebook>
          </sheet>

          <!-- CHATTER harus berada di LUAR sheet -->
          <chatter/>
        </form>
      </field>
    </record>

  <!-- Action -->
  <record id="action_sawit_delivery_order" model="ir.actions.act_window">
    <field name="name">Delivery Orders</field>
    <field name="res_model">sawitpro.delivery.order</field>
    <field name="view_mode">kanban,list,form</field>
  </record>

  <!-- Menu -->
  <menuitem id="menu_sawit_root" name="SawitPRO" groups="base.group_user"/>
  <menuitem id="menu_sawit_operations" name="Operations" parent="menu_sawit_root" groups="base.group_user"/>
  <menuitem id="menu_sawit_delivery_orders" name="Delivery Orders"
            parent="menu_sawit_operations" action="action_sawit_delivery_order" groups="base.group_user"/>
</odoo>

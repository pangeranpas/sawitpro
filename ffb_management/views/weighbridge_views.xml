<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sawit_weighbridge_tree" model="ir.ui.view">
    <field name="name">sawit.weighbridge.tree</field>
    <field name="model">sawitpro.weighbridge</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="delivery_order_id"/>
        <field name="weigh_in"/>
        <field name="weigh_out"/>
        <field name="gross_weight_kg"/>
        <field name="tare_weight_kg"/>
        <field name="net_weight_kg"/>
        <field name="vehicle_no"/>
      </list>
    </field>
  </record>

  <record id="view_sawit_weighbridge_form" model="ir.ui.view">
    <field name="name">sawit.weighbridge.form</field>
    <field name="model">sawitpro.weighbridge</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="delivery_order_id"/>
            <field name="vehicle_no"/>
            <field name="operator"/>
          </group>
          <group>
            <field name="weigh_in"/>
            <field name="weigh_out"/>
            <field name="gross_weight_kg"/>
            <field name="tare_weight_kg"/>
            <field name="net_weight_kg"/>
          </group>
        </sheet>
        <footer>
          <button string="Save" type="object" class="btn-primary" name="write"/>
          <button string="Cancel" special="cancel" class="btn-default"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_sawit_weighbridge" model="ir.actions.act_window">
    <field name="name">Weighbridge Receipts</field>
    <field name="res_model">sawitpro.weighbridge</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_sawit_weighbridge" name="Weighbridge" parent="menu_sawit_operations" action="action_sawit_weighbridge" groups="base.group_user"/>
</odoo>

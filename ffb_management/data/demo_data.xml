<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_partner_mill_1" model="res.partner">
    <field name="name">PKS Mill A</field>
    <field name="is_company" eval="True"/>
  </record>

  <record id="res_partner_vendor_1" model="res.partner">
    <field name="name">Petani A</field>
    <field name="ref">V001</field>
    <field name="parent_id" ref="res_partner_mill_1"/>
  </record>

  <record id="res_partner_vendor_2" model="res.partner">
    <field name="name">Pengepul B</field>
    <field name="ref">V002</field>
    <field name="parent_id" ref="res_partner_mill_1"/>
  </record>

  <!-- fleet.vehicle needs a model_id -->
  <record id="fleet_vehicle_model_demo" model="fleet.vehicle.model">
    <field name="name">Truck Demo</field>
    <field name="brand_id" ref="fleet.fleet_vehicle_model_brand_toyota"/>
  </record>

  <record id="fleet_vehicle_1" model="fleet.vehicle">
    <field name="name">Fleet-A</field>
    <field name="model_id" ref="fleet_vehicle_model_demo"/>
    <field name="license_plate">B 1234 XYZ</field>
  </record>

  <record id="product_ffb" model="product.product">
    <field name="name">FFB</field>
    <field name="default_code">FFB</field>
    <field name="type">service</field>
  </record>

  <record id="do_demo_1" model="sawitpro.delivery.order">
    <field name="name">DO/000001</field>
    <field name="vendor_id" ref="res_partner_vendor_1"/>
    <field name="scheduled_date">2025-09-10 07:00:00</field>
    <field name="quantity_kg">1500</field>
    <field name="quality">good</field>
    <field name="fleet_id" ref="fleet_vehicle_1"/>
    <field name="state">delivered</field>
  </record>

  <record id="wb_demo_1" model="sawitpro.weighbridge">
    <field name="name">WB/000001</field>
    <field name="delivery_order_id" ref="do_demo_1"/>
    <field name="weigh_in">2025-09-10 07:10:00</field>
    <field name="weigh_out">2025-09-10 07:30:00</field>
    <field name="gross_weight_kg">1600</field>
    <field name="tare_weight_kg">100</field>
  </record>

  <record id="ffb_price_20250910" model="sawitpro.ffb.price">
    <field name="mill_id" ref="res_partner_mill_1"/>
    <field name="date">2025-09-10</field>
    <field name="price_per_kg">0.5</field>
  </record>
</odoo>

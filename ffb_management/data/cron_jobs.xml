<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="ir_cron_daily_summary" model="ir.cron">
      <field name="name">Generate Daily Delivery Summaries</field>
      <field name="model_id" ref="model_sawitpro_daily_summary"/>
      <field name="state">code</field>
      <field name="code">model.create_daily_summaries()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">True</field>
      <!-- Optionally, specify user_id so it runs with proper user permissions -->
      <field name="user_id" ref="base.user_root"/>
    </record>
  </data>
</odoo>
